<% layout('./layouts/boilerplate') -%>

<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10 col-sm-12">
      <h4 class="text-center mb-4">Add Listing</h4>

      <form method="POST" action="/listing/new" enctype="multipart/form-data" novalidate class="needs-validation">

        <!-- Title -->
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" class="form-control" name="title" placeholder="Enter catchy title" required>
          <div class="valid-feedback">Title is awesome!</div>
          <div class="invalid-feedback">Enter title</div>
        </div>

        <!-- Description -->
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea class="form-control" name="description" placeholder="Describe your listing" rows="4" required></textarea>
          <div class="invalid-feedback">Enter some description</div>
        </div>

        <!-- Image -->
        <div class="mb-3">
          <label for="image" class="form-label">Image</label>
          <input type="file" class="form-control" name="image" required>
        </div>

        <!-- Price -->
        <div class="mb-3">
          <label for="price" class="form-label">Price</label>
          <input type="number" class="form-control" name="price" placeholder="e.g. 1300" required>
          <div class="invalid-feedback">Enter valid price</div>
        </div>

        <!-- Location and Country -->
        <div class="row">
          <div class="mb-3 col-md-6">
            <label for="location" class="form-label">Location</label>
            <input type="text" class="form-control" name="location" placeholder="Ratnagiri, Maharashtra" required>
            <div class="invalid-feedback">Enter valid location</div>
          </div>
          <div class="mb-3 col-md-6">
            <label for="country" class="form-label">Country</label>
            <input type="text" class="form-control" name="country" placeholder="India" required>
            <div class="invalid-feedback">Enter valid country</div>
          </div>
        </div>

        <!-- Submit -->
        <button class="btn btn-danger w-40 w-sm-40 w-md-30 w-lg-30">Add</button>
      </form>
    </div>
  </div>
</div>

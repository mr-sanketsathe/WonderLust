<% if (success && success.length) { %>
  <div class="container my-3">
    <div class="alert alert-success alert-dismissible fade show mx-auto text-center" role="alert" style="max-width: 500px;">
      <%= success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
<% } %>

<% if (error && error.length) { %>
  <div class="container my-3">
    <div class="alert alert-danger alert-dismissible fade show mx-auto text-center" role="alert" style="max-width: 500px;">
      <%= error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
<% } %>
